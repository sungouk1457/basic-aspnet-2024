@model MyPortfolio.Models.User

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="/css/sign-in.css" />

<main class="form-signin w-100 m-auto">
    <form asp-action="Login">
        <img class="mb-4" src="~/assets/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">로그인</h1>

        <div class="form-floating">
            <input type="email" asp-for="UserEmail" class="form-control" id="usermail" placeholder="name@example.com" required>
            <label for="usermail" asp-for="UserEmail">이메일 주소</label>
        </div>
        <div class="form-floating">
            <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" required>
            <label for="floatingPassword" asp-for="Password">비밀번호</label>
        </div>

        @* <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div> *@
        <button class="btn btn-primary w-100 py-2" type="submit">로그인</button>
        @* <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2024</p> *@
    </form>
    <div class="row justify-content-center">
        <div class="position-relative">
            <hr />
            <p class="text-center">또는</p>
        </div>
    </div>

    <div class="text-center">
        <a asp-controller="Home" asp-action="Register" class="btn btn-dark">회원가입</a>
    </div>
</main>