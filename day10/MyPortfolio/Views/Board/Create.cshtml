@model MyPortfolio.Models.Board

@{
    ViewData["Title"] = "Board";
}

<section class="py-5">
    <div class="container px-5">
        <div class="row px-2">
            <div class="col-md">
                <!-- Submit 버튼누르면 Post 메서드가 발생 -->
                <form asp-controller="Board" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* <div class="mb-3 row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div> *@

                    <div class="mb-3 row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" value='@ViewData["USER_NAME"]' readonly />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label>
                        <!-- textarea는 여는태그와 닫는태그를 모두 사용해야 -->
                        <textarea asp-for="Contents" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <input type="submit" value="저장" class="btn btn-primary" />
                        <a asp-controller="Board" asp-action="Index" class="btn btn-success">목록</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("Contents") });
    </script>
}
